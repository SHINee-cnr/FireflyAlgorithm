package algorithm;

import java.awt.font.NumericShaper.Range;

/**
 * 萤火虫算法接口
 * 
 * @author hba
 *
 */
public interface FireflyAlgorithm {
	/**
	 * 种群初始化
	 */
	public void initPop();

	/**
	 * 计算亮度
	 */
	public void calcuLight();

	/**
	 * 计算欧氏距离
	 * 
	 * @param a
	 * @param b
	 * @return
	 */
	public double calcDistance(double[] a, double[] b);

	/**
	 * 计算吸引度
	 */
	public void calcAttraction();

	/**
	 * 目标函数
	 * 
	 * @param args
	 * @return
	 */
	public double objectiveFun(double[] args);

	/**
	 * 算法运行
	 * 
	 * @param range
	 */
	public void start(Range range);

}
